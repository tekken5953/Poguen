<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/listItemMListImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        tools:src="@tools:sample/avatars"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize12Percent" />

    <TextView
        android:id="@+id/listItemMListTitle"
        style="@style/regularH3"
        tools:text="@tools:sample/cities"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_white"
        android:gravity="start"
        android:layout_toStartOf="@+id/listItemMListMenu"
        android:layout_alignTop="@+id/listItemMListImg"
        android:layout_toEndOf="@+id/listItemMListImg"
        android:fontFamily="@font/regular"/>

    <TextView
        android:id="@+id/listItemMListSinger"
        style="@style/regularH4"
        tools:text="@tools:sample/full_names"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:layout_below="@+id/listItemMListTitle"
        android:layout_alignStart="@+id/listItemMListTitle"
        android:layout_toStartOf="@+id/listItemMListMenu"
        android:fontFamily="@font/regular"
        android:textColor="@color/sub_blue"/>

    <ImageView
        android:id="@+id/listItemMListMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:tint="@color/main_white"
        android:src="@drawable/menu"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>