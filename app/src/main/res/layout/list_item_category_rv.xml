<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="25dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/listItemCategoryImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize12Percent"
        tools:src="@tools:sample/avatars"/>


    <TextView
        android:id="@+id/listItemCategoryTitle"
        style="@style/regularH4"
        tools:text="@tools:sample/first_names"
        android:layout_below="@+id/listItemCategoryImg"
        android:textColor="@color/main_white"
        android:fontFamily="@font/regular"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/listItemCategorySinger"
        style="@style/regularH6"
        tools:text="@tools:sample/full_names"
        android:layout_below="@+id/listItemCategoryTitle"
        android:textColor="@color/sub_blue"
        android:fontFamily="@font/light"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

</RelativeLayout>